#%Module 1.0
#
#  @FLAVOR@ module for use with 'environment-modules' package:
# 
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmodules - loads the modules software & application environment"
        puts stderr "\n\tThis adds $modroot/* to several of the"
        puts stderr "\tenvironment variables."
        puts stderr "\n\tVersion $version\n"
}

module-whatis   "loads the @FLAVOR@ environment"


# Define prefix so PATH and MANPATH can be updated.
setenv        @FLAVOR_UPPER@ @CMAKE_INSTALL_PREFIX@/@FLAVOR@/@MCCODE_VERSION@:@CMAKE_INSTALL_PREFIX@/miniconda3/bin
setenv        @FLAVOR_UPPER@_TOOLS @CMAKE_INSTALL_PREFIX@/@FLAVOR@/@MCCODE_VERSION@/tools/Perl/
prepend-path  PATH          @CMAKE_INSTALL_PREFIX@/@FLAVOR@/@MCCODE_VERSION@/bin:@CMAKE_INSTALL_PREFIX@/miniconda3/bin:@CMAKE_INSTALL_PREFIX@/bin:
prepend-path  MANPATH       @CMAKE_INSTALL_PREFIX@/@FLAVOR@/@MCCODE_VERSION@/doc/man
prepend-path  PERL5LIB      @CMAKE_INSTALL_PREFIX@/perl:@CMAKE_INSTALL_PREFIX@/perl/share/perl5:@CMAKE_INSTALL_PREFIX@/perl/lib64/perl5/
prepend-path  PGPLOT_DIR    @CMAKE_INSTALL_PREFIX@/pgplot
prepend-path  LD_LIBRARY_PATH   @CMAKE_INSTALL_PREFIX@/pgplot

