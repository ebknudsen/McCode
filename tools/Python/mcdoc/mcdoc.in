#!/bin/sh

# launcher for matlab/octave/ifit data plotter

LIB="@TOOLS_LIB@"
TOOL="mcdoc"
VERS="@MCCODE_VERSION@"

canrun() {
    if ! [ -x ${LIB}/${TOOL}.py ]; then
        exit 127;
    fi
}

canrun_i() {
    if ! [ -x ${LIB}/${TOOL}.m ]; then
        exit 127;
    fi
    
    # is ifit on the path?
    if ! [ `which ifit` ]; then
            exit 127;
    fi
}

canrun_o() {
    if ! [ -x ${LIB}/${TOOL}.m ]; then
        exit 127;
    fi
    
    # is octave on the path?
    if ! [ `which octave` ]; then
            exit 127;
    fi
}


if ( canrun ); then
    python3 ${LIB}/${TOOL}.py $*
else
    echo ":: Failed to run Python  ${TOOL}, trying Perl ${TOOL} instead."
    echo ":: If this fails too, consider reinstalling ${TOOL}."
    echo ""

    # Try old Perl-version of mcdoc if Python version cannot run
    ${TOOL} $*
fi
